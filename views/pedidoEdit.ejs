<%-  include('partials/header.ejs') %>
<%-  include('partials/navbar.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Alterar pedido</h1>
        </div>
        <hr>
        <div class="card-body">
            <form action="/pedidos/update" method="post">
                
                <label>numero do pedido:</label>
                <input class="form-control" type="text" name="numero" id="numero" value="<%= pedido.numero %>" required>
                <label>valor do pedido:</label>
                <input class="form-control" type="text" name="valor" id="valor" value="<%= pedido.valor %>" required>
                <input class="form-control" type="hidden" name="id" id="id" value="<%= pedido.id %>" required>
                <br>
                <input type="submit" class="btn btn-warning" onclick="return confirm('Confirma as alterações para o pedido <%=pedido.nome %>')" value="Alterar">
            </form>
            <hr>
        </div>
    </div>
</div>

<%-  include('partials/footer.ejs') %>