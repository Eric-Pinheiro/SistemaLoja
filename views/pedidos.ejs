<div class="container">
    <div class="card">
        <div class="card-header"><h1>Cadastrar</h1></div>
        <div class="card-body">
            <form action="/pedidos/new" method="post">
        <label for="">numero:</label>
        <input type="number" name="numero" id="numero" class="form-control" required>
        <label for="">Valor:</label>
        <input type="text" name="valor" id="valor" class="form-control" required> <br><br>
        <input type="submit" value="Cadastrar">
    </form>
        </div>
    </div>
</div>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Pedidos</h1>
            </div>
            <div class="card-body">
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>NÃºmero:</th>
                            <th>Valor:</th>
                            <th colspan="2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pedidos.forEach(pedido => { %>
                        <tr>
                            <td><img src="imgs/order.png" width="30px"></td>
                            <td><%= pedido.numero %></td>
                            <td>R$<%= pedido.valor.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
                            <td><a style="color: orange;" href="/pedidos/edit/<%= pedido.id%>">Editar</a></td>
                            <td><a style="color: red" href="/pedidos/delete/<%= pedido.id %>" onclick="return confirm('deseja realmente deletar o pedido <%=pedido.nome %>')">Deletar</a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

